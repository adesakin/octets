<h1>Listing collections</h1>

<table>
  <tr>
    <th>Parent</th>
    <th>Id path</th>
    <th>Children count</th>
    <th>Level</th>
    <th>Name</th>
    <th>Description</th>
    <th>Notes</th>
    <th>Updated by</th>
  </tr>

<% @collections.each do |collection| %>
  <tr>
    <td><%=h collection.parent_id %></td>
    <td><%=h collection.id_path %></td>
    <td><%=h collection.children_count %></td>
    <td><%=h collection.level %></td>
    <td><%=h collection.name %></td>
    <td><%=h collection.description %></td>
    <td><%=h collection.notes %></td>
    <td><%=h collection.updated_by %></td>
    <td><%= link_to 'Show', collection %></td>
    <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
    <td><%= link_to 'Destroy', collection, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

