<h1>Listing devices</h1>

<table>
  <tr>
    <th>Parent</th>
    <th>Id path</th>
    <th>Children count</th>
    <th>Family</th>
    <th>Level</th>
    <th>Level</th>
    <th>Name</th>
    <th>Description</th>
    <th>Notes</th>
    <th>Updated by</th>
  </tr>

<% @devices.each do |device| %>
  <tr>
    <td><%=h device.parent_id %></td>
    <td><%=h device.id_path %></td>
    <td><%=h device.children_count %></td>
    <td><%=h device.family_id %></td>
    <td><%=h device.level %></td>
    <td><%=h device.level %></td>
    <td><%=h device.name %></td>
    <td><%=h device.description %></td>
    <td><%=h device.notes %></td>
    <td><%=h device.updated_by %></td>
    <td><%= link_to 'Show', device %></td>
    <td><%= link_to 'Edit', edit_device_path(device) %></td>
    <td><%= link_to 'Destroy', device, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

